<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="525" Width="790">

    <DockPanel LastChildFill="True">
        <Ribbon DockPanel.Dock="Top">
            <RibbonTab Header="Bản đồ">
                <RibbonGroup Header="Thêm">
                    <RibbonButton Label="Tải" LargeImageSource="Resources/Images/add.png" Click="RibbonButton_Click"></RibbonButton>
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
        <StackPanel Name="stkMain" Orientation="Vertical" >
        </StackPanel>
       
    </DockPanel>
</Window>
